{
  "name": "platform",
  "description": "Application Development Workspace of the Mono Repository",
  "packageManager": "pnpm@7.27.1",
  "scripts": {
    "packages:fix-mismatches": "syncpack fix-mismatches",
    "packages:format": "syncpack format",
    "packages:list": "syncpack list",
    "packages:list-mismatches": "syncpack list-mismatches"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "typescript": "^4.9.5"
  },
  "peerDependencies": {
    "syncpack": "^9.8.4"
  },
  "config": {
    "syncpack": {
      "sortAz": [
        "contributors",
        "dependencies",
        "devDependencies",
        "keywords",
        "peerDependencies",
        "resolutions",
        "scripts"
      ],
      "sortFirst": [
        "name",
        "private",
        "version",
        "type",
        "description",
        "author",
        "packageManager",
        "scripts",
        "dependencies",
        "devDependencies",
        "peerDependencies",
        "config",
        "engines"
      ]
    }
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=7",
    "yarn": "please-use-pnpm",
    "npm": "please-use-pnpm"
  }
}
