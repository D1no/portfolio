{
  "name": "platform",
  "description": "Application Development Workspace of the Mono Repository",
  "packageManager": "pnpm@7.27.1",
  "scripts": {
    "format:all": "pnpm format:code && pnpm format:packages",
    "format:check": "prettier --check .",
    "format:code": "prettier --write .",
    "format:packages": "syncpack format",
    "packages:fix-mismatches": "syncpack fix-mismatches",
    "packages:list": "syncpack list",
    "packages:list-mismatches": "syncpack list-mismatches",
    "prepare": "cd .. && husky install platform/.husky"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "typescript": "^4.9.5"
  },
  "peerDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "syncpack": "^9.8.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,scss,css,md,html,json}": [
      "prettier --write"
    ],
    "package.json": [
      "syncpack format --source"
    ]
  },
  "config": {
    "syncpack": {
      "sortAz": [
        "contributors",
        "dependencies",
        "devDependencies",
        "keywords",
        "peerDependencies",
        "resolutions",
        "scripts"
      ],
      "sortFirst": [
        "name",
        "private",
        "version",
        "type",
        "description",
        "author",
        "packageManager",
        "scripts",
        "dependencies",
        "devDependencies",
        "peerDependencies",
        "lint-staged",
        "config",
        "engines"
      ]
    }
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=7",
    "yarn": "please-use-pnpm",
    "npm": "please-use-pnpm"
  }
}
