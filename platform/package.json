{
  "name": "platform",
  "description": "Application Development Workspace of the Mono Repository",
  "packageManager": "pnpm@7.27.1",
  "scripts": {
    "prepare": "cd .. && husky install platform/_tooling/.husky",
    "start": "pnpm --parallel --stream --if-present -r run dev",
    "sys:clear-ports": "kill -15 $(lsof -ti:3000,6006)",
    "w:code:fix": "pnpm w:code:forma && pnpm w:packages:format",
    "w:code:fix-format": "prettier --write .",
    "w:code:fix-logic": "",
    "w:code:lint-format": "prettier --check .",
    "w:code:lint-logic": "eslint .",
    "w:packages:fix-format": "syncpack format",
    "w:packages:fix-mismatch": "syncpack fix-mismatches",
    "w:packages:lint": "syncpack list-mismatches",
    "w:packages:list": "syncpack list"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@storybook/react": "^7.0.0-beta.62",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "typescript": "^4.9.5"
  },
  "peerDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "syncpack": "^9.8.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,scss,css,md,html,json}": [
      "prettier --write"
    ],
    "package.json": [
      "syncpack format --source"
    ]
  },
  "config": {
    "syncpack": {
      "sortAz": [
        "contributors",
        "dependencies",
        "devDependencies",
        "keywords",
        "peerDependencies",
        "resolutions",
        "scripts"
      ],
      "sortFirst": [
        "name",
        "private",
        "version",
        "type",
        "description",
        "author",
        "packageManager",
        "scripts",
        "dependencies",
        "devDependencies",
        "peerDependencies",
        "lint-staged",
        "config",
        "engines"
      ]
    }
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=7",
    "yarn": "please-use-pnpm",
    "npm": "please-use-pnpm"
  }
}
