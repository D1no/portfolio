{
  "name": "platform",
  "description": "Application Development Workspace of the Mono Repository",
  "packageManager": "pnpm@7.27.1",
  "engines": {
    "node": ">=18.14.1",
    "pnpm": ">=7.27.1",
    "yarn": "please-use-pnpm",
    "npm": "please-use-pnpm"
  },
  "scripts": {
    "packages:fix-mismatches": "syncpack fix-mismatches",
    "packages:format": "syncpack format",
    "packages:list": "syncpack list",
    "packages:list-mismatches": "syncpack list-mismatches"
  },
  "config": {
    "syncpack": {
      "sortAz": [
        "contributors",
        "dependencies",
        "devDependencies",
        "keywords",
        "peerDependencies",
        "resolutions",
        "scripts"
      ],
      "sortFirst": [
        "name",
        "private",
        "version",
        "type",
        "description",
        "author",
        "packageManager",
        "engines",
        "scripts"
      ]
    }
  },
  "devDependencies": {
    "syncpack": "^9.8.4"
  }
}
